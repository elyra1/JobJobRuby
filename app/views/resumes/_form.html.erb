<%= form_with(model: resume, class: "needs-validation", novalidate: true) do |f| %>
  <% if resume.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(resume.errors.count, "ошибка") %> при сохранении резюме:</h4>
      <ul>
        <% resume.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :title, "Заголовок", class: "form-label" %>
    <%= f.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :description, "Описание", class: "form-label" %>
    <%= f.text_area :description, class: "form-control", rows: 5, required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :skills, "Навыки", class: "form-label" %>
    <%= f.text_area :skills, class: "form-control", rows: 3, required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :experience, "Опыт работы", class: "form-label" %>
    <%= f.text_area :experience, class: "form-control", rows: 3, required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :education, "Образование", class: "form-label" %>
    <%= f.text_area :education, class: "form-control", rows: 3, required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :salary_expectation, "Ожидаемая зарплата", class: "form-label" %>
    <div class="row">
      <div class="col-md-8">
        <%= f.number_field :salary_expectation, class: "form-control", required: true, min: 100, max: 1000000000 %>
      </div>
      <div class="col-md-4">
        <%= f.select :currency, ['RUB', 'USD', 'EUR', 'GBP'], {}, class: "form-select", required: true %>
      </div>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :contact, "Контакты", class: "form-label" %>
    <%= f.text_area :contact, class: "form-control", rows: 2, required: true %>
  </div>

  <div class="mb-3 form-check">
    <%= f.check_box :is_active, class: "form-check-input" %>
    <%= f.label :is_active, "Сделать резюме видимым для работодателей", class: "form-check-label" %>
  </div>

  <div class="actions">
    <%= f.submit "Сохранить", class: "btn btn-primary" %>
    <%= link_to "Отмена", my_list_path, class: "btn btn-secondary" %>
  </div>
<% end %> 